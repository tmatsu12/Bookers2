<table class="table">
  <h2 class="mt-3">User info</h2>
  <thead>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to edit_user_path(current_user.id), class: "col-12 btn btn-outline-secondary btn-block fas fa-user-cog" do %>
<% end %>

<h2 class="mt-3">New book</h2>

<%= form_with model:book, local:true do |f| %>
  <div class="form-group">
    <%= f.label :Title %><br />
    <%= f.text_field :title, class: "col-12 form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Opinion %><br />
    <%= f.text_area :body, class: "col-12 form-control" %>
  </div>
    <%= f.submit 'Create Book',class: "btn btn-success" %>
<% end %>



