<div class="container">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-5 mx-auto">
      <h2 class="mt-0">User info</h2>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :Name %><br />
            <%= f.text_field :name, class: "form-control", style: "padding: 0 0 0 12px" %>
          </div>
          <div class="form-group">
            <%= f.label :Image %><br />
            <!--<%= f.attachment_field :profile_image, class: "form-control" %>-->
            <%= f.attachment_field :profile_image %>
          </div>
          <div class="form-group">
            <%= f.label :Introduction %><br />
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
          <%= f.submit 'Update User',class: "btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>