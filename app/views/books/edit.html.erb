<div class="container">

  <div class="row">
    <div class="col-12 col-md-8 col-lg-5 mx-auto">
      <h1 class="mt-0">Editing Book</h1>

      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

        <%= form_with model:@book, local:true do |f| %>
          <div class="form-group">
            <%= f.label :Title %><br />
            <%= f.text_field :title, class: "form-control", style: "padding: 0 0 0 12px" %>
          </div>

          <div class="form-group">
            <%= f.label :Opinion %><br />
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <%= f.submit 'Update Book',class: "btn btn-success" %>
        <% end %>
        <br>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
    </div>
  </div>
</div>